{# content #}
<div class="section container">
  <h1 class="section-title">Recent articles</h1>

  <ul role="list" class="articles__list flow">

    {%- for post in collections.post | reverse -%}
      <li>
        <article class="snippet">
          <img src="{{post.data.image}}" class="snippet__image" alt="{{post.data.imageAlt}}">
          <h3 class="snippet__title"><a href="{{post.url}}">{{post.data.title}}</a></h3> </h3>
          <p class="snippet__meta">by <span>{{post.data.author}}</span> on <span>{{post.data.date | postDate}}</span></p>
          <p class="snippet__body">{{post.data.description}}</p>
          <a href="{{post.url}}" class="btn btn--primary">Continue Reading</a>
        </article>
      </li>
    {%- endfor -%}

  </ul>

</div>
